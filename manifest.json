{
  "manifest_version": 3,
  "name": "ColorCheck",
  "version": "1.0.0",
  "description": "Eyedropper and 3-color palette extractor for web designers",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-eyedropper": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Activate eyedropper color picker"
    },
    "toggle-palette": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Activate palette extraction mode"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
